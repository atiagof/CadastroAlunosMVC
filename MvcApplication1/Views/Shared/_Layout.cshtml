<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <!--Stylo CSS do Bootstrap  - Colar após o carregamento de seu CSS-->
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">

        <div class="row">
            <div class="col-md-12">
                @Html.Action("Menu", "Home")
            </div>
            
        </div>

        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <br /><br />
                <div class="panel-primary">
                    <div class="panel-heading">
                        Aulas
                    </div> 
                    <div class="panel-body">
                        <ul>
                            <li>Aula 1</li>
                            <li>Aula 2</li>
                            <li>Aula 3</li>
                        </ul>
                    </div>
                    <div class="panel-footer text-center">
                        @*<img class="thumbnail" src="Content/Imagens/logo1.png" />*@
                    </div>
                </div>
            </div>
        </div>
        

        <div class="div-botton-pag">
            <span>Rodapé da página.</span>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <!--Script js do Bootstrap  - Colar após o carregamento do Jquery-->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
